html 
    head 
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/style.css")
        title #{title}

    body
        a(href="/")
            button(class="btn btn-success") Formulario
        h1(class="text-center mt-5") Vista de Productos
        if productsList.length != 0
            div(class="mx-5")
                table(class="table text-center rounded")
                    tr(class="row")
                        th(scope="col" class="col-4") Nombre
                        th(scope="col" class="col-4") Precio
                        th(scope="col" class="col-4") Foto

                    each product in productsList 
                        tr(scope="row" class="row")
                            td(class="col-4") #{product.name} 
                            td(class="col-4") #{product.price}
                            td(class="col-4")
                                img(width="20%" src=product.thumbnail alt=product.name)

        else
            div(id="productListEmpty" class="text-center rounded mx-auto")
                p(class="p-3") No se encontraron productos
